[push]
	autoSetupRemote = true
[commit]
	gpgsign = true
[tag]
	gpgSign = true
[alias]
	# status
	st = status --short --branch

	# add
	a  = add
	ap = add --patch

	# commit
	c  = commit
	cm = commit --message

	# sync
	pl = pull --rebase
	ps = push
	fp = fetch --prune

	# cleanup
	sweep = "!git branch --merged | grep -v '\\*\\|main\\|master' | xargs -n 1 git branch -d"
